#!/bin/bash

function main() {
  local username="$1"
  local repo_name="$2"
  local repo_description="$3"
  if [[ -z "$repo_description" ]] ; then
    echo "Usage: git mkrepo USERNAME REPO_NAME REPO_DESCRIPTION"
    return 1
  fi
  curl -u "$username" https://api.github.com/user/repos \
       -d "{\"name\": \"$repo_name\", \"description\", \"$repo_description\"}"
}

main "$@"
