#!/usr/bin/zsh

HISTFILE=~/.history/zsh
HISTSIZE=16384
SAVEHIST=65536
WORDCHARS=''
bindkey -e

zstyle :compinstall filename '/home/el/.zshrc'
autoload -Uz compinit ; compinit

bindkey ^W kill-region

setopt prompt_subst
autoload -Uz vcs_info
zstyle ':vcs_info:*' actionformats '%s %F{3}%b%f|%a %S'
zstyle ':vcs_info:*' formats '%s %F{2}%b%f %S'
zstyle ':vcs_info:*' enable git
precmd() {
    vcs_info
}

PROMPT='   %(?:%b%F{green}:%B%F{red})><(((ยบ>%b %B%D{%V.%a %T %s} %b%F{yellow}${vcs_info_msg_0_}%b
%B%F{green}%i. %n@%m%F{blue}:%1~ %b$ '
