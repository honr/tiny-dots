# On linux: "linux", on Mac OS X: "darwin".
UNAME="$(uname)"
case "$UNAME" in
  Linux) UNAME=linux ;;
  Darwin) UNAME=darwin ;;
esac

export PATH="$HOME/.local/bin/$UNAME:$HOME/.local/bin:$HOME/.opt/bin:$PATH"
export GOPATH="$HOME/.local"

# Convenience command for tmux project management.
# ~/.tmux/tmux.dirs is called with "$sty" to set the initial directory of the
# session.  Then you extra project-specific scripts are sourced from
# ~/.tmux/$sty when creating a session.
tt() {
  if [[ -z "$1" ]] ; then
      tmux list-sessions
      return
  fi
  local sty="$1"
  local dir
  source "$HOME/.tmux/tmux.dirs" "$sty"
  echo "session dir: $dir"
  export STY="$sty"
  if tmux new -d -s "$sty" -c "$dir" ; then
      if [[ -e "$HOME/.tmux/$sty" ]] ; then
          source "$HOME/.tmux/$sty"
      fi
  fi
  unset "$STY"
  tmux attach -t "$sty"
}

source "$HOME/Pool/host/etc/zshenv-host" 2>/dev/null
